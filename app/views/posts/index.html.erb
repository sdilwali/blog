<h1 class="jumbotron">My Rails Blog</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th >Body</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-bordered">
    <% @posts.each do |post| %>
      <tr>
        <!--<td><%= post.title %></td>-->
        <td><%= link_to post.title, post, class:'btn btn-info' %></td>
        <td><%= post.body %></td>
        <td><%= post.created_at.to_date %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class:'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', post, method: :delete, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path, class:'btn btn-primary' %>
