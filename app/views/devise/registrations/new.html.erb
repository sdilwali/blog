<div class="row">
 <div class="col-md-6 col-md-offset-3 text-center">
  <% if params[:plan] == '2' %>
    <h2>Pro Account ($10/month)</h2>
    <p>Sign up for pro account for $10 per month and get access to the community and contact information.</p>
  <% else %>
    <h2>Basic Account (free)</h2>
    <p>Sign up for free to see members of the community!</p>
  <% end %>
 </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
        
      <% if params[:plan] == '2' %> <%= render "pro_form" %>
      <% else %> <%= render "basic_form" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>